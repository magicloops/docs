{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@theme/*": ["./src/theme/*"],
      "@docusaurus/*": ["./node_modules/@docusaurus/*"]
    },
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/types/*.d.ts"
  ]
}
